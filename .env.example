# ============================================
# GENERAL SETTINGS
# ============================================
NODE_ENV=development
BUILD_TARGET=development

# ============================================
# PORTS
# ============================================
BACKEND_PORT=3000
FRONTEND_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
PGADMIN_PORT=5050

# Kong API Gateway
KONG_PROXY_PORT=8000
KONG_PROXY_SSL_PORT=8443
KONG_ADMIN_PORT=8001

# Monitoring
GRAFANA_PORT=3002
LOKI_PORT=3100

# ============================================
# POSTGRESQL DATABASE
# ============================================
POSTGRES_DB=alaroma
POSTGRES_USER=alaroma_user
POSTGRES_PASSWORD=changeme_strong_password_here

# ============================================
# REDIS CACHE
# ============================================
REDIS_PASSWORD=changeme_redis_password_here

# ============================================
# BACKEND API
# ============================================
DATABASE_URL=postgresql://alaroma_user:changeme_strong_password_here@postgres:5432/alaroma
REDIS_URL=redis://:changeme_redis_password_here@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000

# ============================================
# PGADMIN (Database Management Tool)
# ============================================
PGADMIN_EMAIL=admin@alaroma.local
PGADMIN_PASSWORD=changeme_pgadmin_password

# ============================================
# GRAFANA (Monitoring & Logging)
# ============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password
GRAFANA_URL=http://localhost:3002

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@alaroma.local

# ============================================
# FILE UPLOADS
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# ============================================
# BUSINESS LOGIC
# ============================================
# Combo deal configuration
COMBO_SECOND_ITEM_PRICE=700
COMBO_MAX_GIFT_PRICE=700

# Gift certificate configuration
CERTIFICATE_CODE_LENGTH=8
CERTIFICATE_DEFAULT_VALIDITY_DAYS=365

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:80

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# BACKUP CONFIGURATION (Optional)
# ============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
